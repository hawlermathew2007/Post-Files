<div class="register-bg"></div>
<div class="register-container">
    <div class="register-inside">
        <form action="/register" method="POST">
            <h1>POST FILES</h1>
            <% if(locals.errorMessage != null) { %>
                <div class="register-message">
                    <i class="fa-solid fa-circle-exclamation" style="color: #fff;"></i><p><%= errorMessage %></p>
                </div>
            <% } else{ %>
                <p style="text-align: center;">Please fulfill all the information in the blanks. Click <span style="font-style: italic;">login</span> If you already have an account.</p>
            <% } %>
            <br>      
            <input type="text" name="name" placeholder="Username" required><br> 
            <input type="date" name="date" required><br>
            <input type="password" name="password" placeholder="Password" required><br>
            <button type="submit">Register</button>
            <hr>
            <div class="register-login">
                <a href="/login">Login</a>
            </div>
    </div>
</div>
</form>